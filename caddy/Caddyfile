{
	admin :2019
}

# Handle the domain - Cloudflare will provide SSL
payroll.farindra.com {
	root * /app/public
	encode zstd gzip
	file_server

	# Security headers
	header {
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		X-XSS-Protection "1; mode=block"
	}

	# Cloudflare already provides HSTS, so we don't need it here
	# Cloudflare handles SSL termination

	log {
		output file /var/log/caddy/access.log
		format json
	}

	handle_errors {
		respond "{http.error.status_code} {http.error.status_text}"
	}
}

# Handle localhost without HTTPS
:80 {
	root * /app/public
	encode zstd gzip
	file_server
	handle_errors
}
