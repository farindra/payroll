{
	admin :2019
}

# Handle Zero Trust tunnel traffic
payroll.farindra.com {
	root * /app/public
	encode zstd gzip
	file_server

	# Security headers for Zero Trust
	header {
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		X-XSS-Protection "1; mode=block"
		# Add Zero Trust specific headers
		CF-IPCountry {http.request.remote.host}
		CF-Ray {http.request.cf-ray}
	}

	# Zero Trust provides SSL, so we focus on app security
	log {
		output file /var/log/caddy/access.log
		format json
	}

	handle_errors {
		respond "{http.error.status_code} {http.error.status_text}"
	}
}

# Handle localhost without HTTPS
:80 {
	root * /app/public
	encode zstd gzip
	file_server
	handle_errors
}
