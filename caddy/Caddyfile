{
	admin :2019
	email farindra.project@gmail.com
	acme_dns cloudflare {
		api_token yourtoken
	}
}

# Handle the domain with automatic HTTPS
payroll.farindra.com {
	root * /app/public
	encode zstd gzip
	file_server

	# Security headers
	header {
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		X-XSS-Protection "1; mode=block"
		Strict-Transport-Security "max-age=31536000; includeSubDomains"
	}

	log {
		output file /var/log/caddy/access.log
		format json
	}

	handle_errors {
		respond "{http.error.status_code} {http.error.status_text}"
	}
}

# Handle localhost without HTTPS
:80 {
	root * /app/public
	encode zstd gzip
	file_server
	handle_errors
}
